 <!DOCTYPE html>
 <html>
 <head>
     <title>Strona logowania</title>
     <link rel="stylesheet" type="text/css" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
     <link rel="stylesheet" type="text/css" href="css/style.css">
     <link rel="stylesheet" type="text/css" href="css/owl.carousel.min.css">
 </head>
 <body>
     <div class="topbar">
         <div class="container">
              
             <div class="topcenter">
                 <ul>
                     <li><a href="/">Strong główna</a></li>
                     <li><a href="contact">Kontakt</a></li>
                     <% if (privileged) { %>
						<li><a href='users'>Użytkownicy</a></li>
						<li><a href='products'>Produkty</a></li>
						<li><a href='orders'>Zamówienia</a></li>
					<% } %>                 </ul>
             </div>
 
             <div class="topright">
                 <ul>
                     <li><a href="#"><i class="fas fa-phone"></i> (+48)123456789</a></li>
                     <li>Nazwa użytkownika: <%= username %></li>
                 </ul>
             </div>
         </div>
     </div>
 
     <div class="header">
         <a href="/">
            <div class="container">
                <div class="logo">
                    <img src="images/logo.png">
                </div>
            </div>
        </a>
     </div>
     
     <div class="container" style="width: 30%;"> 
        <!-- <h1 style="font-size: 20px">Logowanie</h1> -->
        <div class="text"><h3>Logowanie</h3></div>
        <form method="POST" action="login">
            <input class="textField" type="text" placeholder="Nazwa użytkownika" name="username">
            <input class="textField" type="password" placeholder="Hasło" name="password">
            <input class="submitBtn" type="submit" value="Zaloguj się">
        </form>

        <br>
        <div style="color:red">
            <%= msg %>
        </div>
        <br>

        <div class="text"><h3>Rejestracja</h3></div>
        <form method="POST" action="register">
            <input class="textField" type="text" placeholder="Nazwa użytkownika" name="username">
            <input class="textField" type="password" placeholder="Hasło" name="password">
            <input class="submitBtn" type="submit" value="Zarejestruj się">
        </form>          
    </div>   
 
 <script src="js/jquery-3.3.1.min.js"></script>
 <script src="js/jquery.cycle.js"></script>
 <script src="js/owl.carousel.min.js"></script>
 </body>
 </html>